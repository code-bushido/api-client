{
    "name": "code-bushido/api-client",
    "type": "library",
    "description": "API Client",
    "keywords": [
        "code-bushido",
        "api-client"
    ],
    "homepage": "https://github.com/code-bushido/api-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Wojciech Nowicki",
            "email": "wnowicki@me.com",
            "homepage": "http://wojciechnowicki.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "ext-json": "*",
        "code-bushido/foundation": "^0.1.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bushido\\ApiClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BushidoTests\\ApiClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
